# This is global editorconfig

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,css,scss}]
quote_type = single

[*.md]
trim_trailing_whitespace = false

[*.{json, yml, html, config, md}]
indent_size = 2