{
  "extends": "./tsconfig-checks.json",
  "compilerOptions": {
    "outDir": "./build/",
    "module": "esnext",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "problems/*": [
        "./Problems/*"
      ],
    }
  },
  "include": [
    "./Problems/**/*.[t|j]s",
  ]
}
